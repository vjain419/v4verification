--exclude=.SOS
--exclude=.git
--exclude=nobackup
--exclude=nobkp
--exclude=results
--exclude=*.log

--langdef=verilog_systemverilog
--langmap=verilog_systemverilog:.sv.v.svh.tv.vg.vinc

--regex-verilog_systemverilog=/^\s*(\b(static|local|virtual|protected)\b)*\s*\bclass\b\s*(\b\w+\b)/\3/c,class/
--regex-verilog_systemverilog=/^\s*(\b(static|local|virtual|protected)\b)*\s*\btask\b\s*(\b(static|automatic)\b)*\s*(\w+::)*\s*(\b\w+\b)/\6/t,task/
--regex-verilog_systemverilog=/^\s*(\b(static|local|virtual|protected)\b)*\s*\bfunction\b\s*(\b(\w+)\b)*\s*(\w+::)*\s*(\b\w+\b)/\6/f,function/

--regex-verilog_systemverilog=/^\s*\bmodule\b\s*(\b\w+\b)/\1/m,module/
--regex-verilog_systemverilog=/^\s*\bprogram\b\s*(\b\w+\b)/\1/p,program/
--regex-verilog_systemverilog=/^\s*\binterface\b\s*(\b\w+\b)/\1/i,interface/
--regex-verilog_systemverilog=/^\s*\btypedef\b\s+.*\s+(\b\w+\b)\s*;/\1/e,typedef/
--regex-verilog_systemverilog=/^\s*`define\b\s*(\w+)/`\1/d,define/
--regex-verilog_systemverilog=/}\s*(\b\w+\b)\s*;/\1/e,typedef/

--regex-verilog_systemverilog=/^\s*(\b(static|local|private|rand)\b)*\s*(\b(shortint|int|longint)\b)\s*(\bunsigned\b)?(\s*\[.+\])*\s*(\b\w+\b)/\7/v,variable/
--regex-verilog_systemverilog=/^\s*(\b(static|local|private|rand)\b)*\s*(\b(byte|bit|logic|reg|integer|time)\b)(\s*\[.+\])*\s*(\b\w+\b)/\6/v,variable/
--regex-verilog_systemverilog=/^\s*(\b(static|local|private)\b)*\s*(\b(real|shortreal|chandle|string|event)\b)(\s*\[.+\])*\s*(\b\w+\b)/\6/v,variable/
--regex-verilog_systemverilog=/(\b(input|output|inout)\b)?\s*(\[.+\])*\s*(\b(wire|reg|logic)\b)\s*(\[.+\])*\s*(#(\(.+\)|\S+)\))?\s*(\b\w+\b)/\9/v,variable/
--regex-verilog_systemverilog=/(\b(parameter|localparam)\b).+(\b\w+\b)\s*=/\3/a,parameter/

--verilog_systemverilog-kinds=+ctfmpied

--languages=verilog_systemverilog,C,C++,HTML,Lisp,Make,Matlab,Perl,Python,Sh,Text
